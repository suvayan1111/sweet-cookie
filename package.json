{
	"name": "sweet-cookie",
	"private": true,
	"type": "module",
	"packageManager": "pnpm@10.25.0",
	"scripts": {
		"build": "pnpm -r build",
		"lint": "biome check . && oxlint --type-aware --tsconfig tsconfig.lint.json --config .oxlintrc.json --ignore-pattern \"**/dist/**\" --ignore-pattern \"**/node_modules/**\" --ignore-pattern \"**/coverage/**\" .",
		"format": "biome format --write .",
		"test": "vitest run --coverage",
		"test:bun": "bun test packages/core/tests-bun",
		"test:watch": "vitest",
		"typecheck": "pnpm -r typecheck"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.10",
		"@types/node": "^25.0.3",
		"@vitest/coverage-v8": "^3.2.4",
		"oxlint": "^1.35.0",
		"oxlint-tsgolint": "^0.10.0",
		"typescript": "^5.9.3",
		"vitest": "^3.2.4"
	},
	"pnpm": {
		"onlyBuiltDependencies": [
			"esbuild"
		]
	}
}
